@{
    ViewData["Title"] = "Contacto";
}
<div class="row justify-content-center mt-5">
    <h1 class="text-center">¡Contacta conmigo!</h1>

    <form asp-controller="Home" asp-action="Contacto" class="contacto">
        <div class="mb-3">
            <label for="nombre" class="form-label">Nombre</label>
            <input class="form-control" type="text" id="nombre" name="nombre" placeholder="Introduce tu nombre" />
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input class="form-control" type="email" id="email" name="email" placeholder="nombre@ejemplo.com" />
        </div>
        <div class="mb-3">
            <label for="mensaje" class="form-label">Mensaje</label>
            <textarea class="form-control" id="mensaje" name="mensaje" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
</div>
